<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/color_base_0"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="70dip"
    android:gravity="left|center"
    android:padding="5dp">
    <ImageView
        android:id="@+id/img_contactlist"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dip"
        android:layout_weight="1"
        android:layout_height="fill_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="40">
            <TextView
                android:id="@+id/tv_chatroom_member_displayname"
                android:layout_width="0dip"
                android:layout_weight="80"
                android:layout_height="fill_parent"
                android:textSize="28dip"
                android:gravity="center_vertical|left"
                android:paddingLeft="20dip"
                android:textColor="@color/color_base_e"
                />
            <TextView
                android:id="@+id/tv_chatroom_lasttime"
                android:layout_width="0dip"
                android:layout_weight="20"
                android:layout_height="fill_parent"
                android:textSize="14dip"
                android:gravity="center"
                android:textColor="@color/middle_grey"
                />
        </LinearLayout>
        <TextView
            android:id="@+id/tv_last_message"
            android:layout_width="fill_parent"
            android:layout_height="0dip"
            android:layout_weight="60"
            android:textSize="14dip"
            android:gravity="center_vertical|left"
            android:paddingLeft="20dip"
            android:paddingRight="50dip"
            android:maxLines="2"
            android:textColor="@color/dark_grey"
            />
    </LinearLayout>
</LinearLayout>